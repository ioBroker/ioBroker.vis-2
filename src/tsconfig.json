{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "noEmit": false,
    "outDir": "./build",
    "sourceMap": true,
    "sourceRoot": "./src",
    "noImplicitAny": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "jsx": "react",
    "types": [
      "@iobroker/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "./**/*.test.ts",
    "./**/*.test.tsx"
  ]
}